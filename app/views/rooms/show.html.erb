<p id="notice"><%= notice %></p>

<h1><%= @room.slug %></h1>

<table class='table table-hover'>
  <% @room.topics.each do |topic| %>
    <tr>
      <td><%= topic.name %></td>
      <td><%= link_to(pluralize(topic.responses.count, 'response'), topic_path(topic)) %></td>
    </tr>
  <% end %>
</table>